<script type="text/javascript">

function increase(x) {

var value = parseInt(document.getElementById(x).value, 10);

value = isNaN(value) ? 0 : value;

value++;

document.getElementById(x).value = value;

}

function decrease(x) {

var value = parseInt(document.getElementById(x).value, 10);

value = isNaN(value) ? 0 : value;

value--;

if (value >= 0) {

document.getElementById(x).value = value;

}
</script>

