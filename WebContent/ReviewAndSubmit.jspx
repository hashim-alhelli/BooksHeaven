					<p>HST: 13%</p>
					<p>Shipping: Free</p>
					
					</div>
					
					<div class="panel-footer">
					<c:set var="result" value="${total_price * 1.13}"/>
					<p class="text-left">Total Cost: <f:formatNumber type="currency" >${result}</f:formatNumber></p>
					
					</div>
				</div><!-- end of panel -->
			</div><!-- end of side panel -->
					</div><!-- end of side panel -->





