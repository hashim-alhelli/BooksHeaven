					<c:choose>
						<c:when test='${searchstring != null}'>
							<li class="text-success">Item Search</li>
						</c:when>
						<c:otherwise>
						<c:forEach var="s" items="${titleRV}">
							<li class="text-success">${s.value.getTitle()}</li>
							</c:forEach>
						</c:otherwise>
					</c:choose>
				</ol>
			</div>
