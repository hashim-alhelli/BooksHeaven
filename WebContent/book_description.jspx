					<c:choose>
						<c:when test='${searchstring != null}'>
							<h4>
								<span class="label label-info"><span class="badge">${ITEM_COUNT}</span>
									products match your search query "${searchstring}"</span>
							</h4>
						</c:when>
						<c:otherwise>
